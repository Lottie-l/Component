{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "ESNext",
    "target": "ES5",
    "declaration": true,
    "removeComments": true,
    "sourceMap": false,
    "jsx": "react",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "skipLibCheck": true,
    "paths": {
      "@@/*": [".dumi/tmp/*"],
      "my-component-lib": ["src"],
      "my-component-lib/*": ["src/*", "*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "typings","src/tests","src/*/__tests__/**"]
}
